<Window x:Class="app_inventario_andres_navarro.Editar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app_inventario_andres_navarro"
        mc:Ignorable="d"
        Title="Editar Producto" Height="300" Width="400" Icon="Imagenes/Editar.png">
    <Grid>
        <StackPanel>
            <TextBlock Text="ID:" Margin="10,0,10,0"/>
            <TextBox x:Name="txtId" IsReadOnly="True" Margin="10,0,10,10"/>

            <TextBlock Text="Nombre:" Margin="10,0,10,0"/>
            <TextBox x:Name="txtNombre"  Margin="10,0,10,10"/>

            <TextBlock Text="Cantidad:" Margin="10,0,10,0"/>
            <TextBox x:Name="txtCantidad" Margin="10,0,10,10"/>

            <TextBlock Text="Precio:" Margin="10,0,10,0"/>
            <TextBox x:Name="txtPrecio" Margin="10,0,10,10"/>

            <TextBlock Text="Descripción:" Margin="10,0,10,0"/>
            <TextBox x:Name="txtDescripcion" Margin="10,0,10,10"/>

            <Button Content="Editar Producto" Background="BlueViolet" Click="Editar_Click" FontWeight="Bold" FontStyle="Italic" Margin="10,0,10,10" />

        </StackPanel>
    </Grid>
</Window>

